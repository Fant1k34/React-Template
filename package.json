{
    "name": "Front-template",
    "description": "React template with Node.js",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "start": "yarn clear-front && yarn build-front && node ./src/server/server.js",
        "lint": "eslint ./src/components",
        "lint:fix": "eslint --fix ./src/components",
        "format": "yarn prettier --write .",
        "clear-front": "rm -rf ./dist",
        "build-front": "npx webpack --config webpack.config.js",
        "pre-commit": "lint-staged",
        "prepare": "husky install"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.12",
        "@types/react-dom": "^18.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.11",
        "@typescript-eslint/parser": "^5.59.11",
        "css-loader": "^6.8.1",
        "eslint": "^8.43.0",
        "eslint-plugin-filenames": "^1.3.2",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "express": "^4.18.2",
        "html-webpack-plugin": "^5.5.3",
        "prettier": "^2.8.8",
        "read-yaml-file": "^2.1.0",
        "style-loader": "^3.3.3",
        "ts-loader": "^9.4.3",
        "tsc": "^2.0.4",
        "typescript": "^5.1.3",
        "webpack": "^5.86.0",
        "webpack-cli": "^5.1.4",
        "husky": "^8.0.0"
    }
}
